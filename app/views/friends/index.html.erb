<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered table-hover">
  <thead  class="thead-dark">
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td scope="row"><%= friend.first_name %></td>
        <td scope="row"><%= friend.last_name %></td>
        <td scope="row"><%= friend.email %></td>
        <td scope="row"><%= friend.phone %></td>
        <td scope="row"><%= friend.twitter %></td>
        <td scope="row"><%= link_to 'Show', friend %></td>
        <td scope="row"><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td scope="row"><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-dark" %>
